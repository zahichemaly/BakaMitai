<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/card_grid_width"
    android:layout_height="@dimen/card_grid_height"
    android:layout_margin="@dimen/spacing_small"
    app:cardBackgroundColor="?attr/colorPrimary"
    app:cardCornerRadius="@dimen/card_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivEntry"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_card_grid_height"
            android:scaleType="fitXY"
            tools:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:id="@+id/llEntry"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/spacing_small"
            android:layout_marginEnd="@dimen/spacing_xsmall"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:minHeight="35dp"
                android:textColor="?attr/colorOnPrimary"
                android:textStyle="bold"
                tools:text="Detective Conan Detective Conan Detective Conan" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xsmall"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="?attr/colorOnPrimary"
                tools:text="15:00" />

            <TextView
                android:id="@+id/tvAired"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xsmall"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="?attr/colorOnPrimary"
                android:textStyle="bold"
                tools:text="Aired" />
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>